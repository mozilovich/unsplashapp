<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Text -->

    <style name="Text" parent="TextAppearance.AppCompat" />

    <style name="Text.Small">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="Text.Small.Primary">
        <item name="android:textColor">@color/ds_text_primary</item>
    </style>

    <style name="Text.Small.Secondary">
        <item name="android:textColor">@color/ds_text_secondary</item>
    </style>

    <style name="Text.Small.Primary.Header">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="Text.Medium.Primary">
        <item name="android:textColor">@color/ds_text_primary</item>
    </style>

    <style name="Text.Medium.Secondary">
        <item name="android:textColor">@color/ds_text_secondary</item>
    </style>

    <style name="Text.Medium.Primary.Header">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/font_regular</item>
    </style>

    <style name="Text.Large.Primary">
        <item name="android:textColor">@color/ds_text_primary</item>
    </style>

    <style name="Text.Large.Secondary">
        <item name="android:textColor">@color/ds_text_secondary</item>
    </style>

    <style name="Text.Large.Primary.Header">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <!-- RadioButton -->

    <style name="ThemeSettingsButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:button">@null</item>
        <item name="android:textAppearance">@style/Text.Medium.Primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawableRight">@drawable/btn_theme_settings</item>
    </style>

</resources>